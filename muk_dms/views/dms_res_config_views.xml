<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_muk_dms_configuration" model="ir.ui.view">
            <field name="name">muk.dms.res.config.view</field>
            <field name="model">muk.dms.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Document Management" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                    </header>
                    <div>
                        <span>(*) This configuration is related to the company you're logged into.</span>
                    </div>
                    <group name="general" string="General">
                        <field name="company_id" invisible="1"/>
                    </group>
                    <group name="operational">
                    </group>
                </form>
            </field>
        </record>

        <record id="action_muk_dms_configuration" model="ir.actions.act_window">
            <field name="name">Configure Document Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">muk.dms.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

</odoo>
