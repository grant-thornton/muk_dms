<odoo>

<record id="view_dms_file_kanban" model="ir.ui.view">
	<field name="name">muk_dms_file.kanban</field>
	<field name="model">muk_dms.file</field>
	<field name="arch" type="xml">
		<kanban js_class="dms_file_kanban">
			<field name="name" />
			<field name="thumbnail" />
			<templates>
				<t t-name="kanban-box">
					<div class="muk_kanban_file">
					    <div class="muk_image text-center" t-attf-data-id="#{record.id.value}">
							<img t-attf-src="data:image/*;base64,{{record.thumbnail.value}}" />
						</div>
						<div class="muk_filename text-center" t-attf-data-id="#{record.id.value}">
							<t name="name" t-esc="record.name.value" />
						</div>
					</div>
				</t>
			</templates>
		</kanban>
	</field>
</record>

<record id="view_dms_file_tree" model="ir.ui.view">
	<field name="name">muk_dms_file.tree</field>
	<field name="model">muk_dms.file</field>
	<field name="arch" type="xml">
		<tree string="Files">
			<field name="locked" invisible="1" />
			<field name="perm_create" invisible="1" />
			<field name="perm_write" invisible="1" />
			<field name="perm_unlink" invisible="1" />
			<field name="code"/>
			<field name="name" />
			<field name="mimetype" />
			<field name="size" widget="dms_size" />
			<field name="write_date" />
			<field name="path" widget="dms_path" />
		</tree>
	</field>
</record>

<record id="view_dms_file_form" model="ir.ui.view">
	<field name="name">muk_dms_file.form</field>
	<field name="model">muk_dms.file</field>
	<field name="arch" type="xml">
		<form string="Files">
			<header>
				<button class="oe_highlight" 
					name="user_lock" 
					type="object"
					string="Lock (Edit)" 
					attrs="{'invisible':['|',('locked', '!=', False), ('perm_write', '=', False)]}" />
				<button class="oe_highlight" 
					name="user_unlock" 
					type="object"
					string="Unlock (Release)"
					attrs="{'invisible':['|',('locked', '=', False), ('editor', '=', False)]}" />
			</header>
			<sheet>
				<div class="oe_button_box" name="button_box">
	                <button name="toggle_active" type="object" confirm="(Un)archiving the file. Do you want to proceed?" class="oe_stat_button" icon="fa-archive">
	                    <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
	                </button>
				</div>
				<field name="locked" invisible="1" />
				<field name="editor" invisible="1" />
				<field name="thumbnail" 
					widget="image" 
					class="oe_avatar oe_read_only" 
					options="{'size': [90, 90]}"/>
				<field name="custom_thumbnail" 
					widget="image" 
					class="oe_avatar oe_edit_only" 
					options="{'size': [90, 90]}"/>
				<div class="oe_title">
					<h3>
						<field name="content" filename="name" />
					</h3>
					<label for="name" class="oe_edit_only" />
					<h1>
						<field name="name" />
					</h1>
				</div>
 				<group>
 					<field name="relational_path" widget="dms_relpath" />
 					<field name="code" readonly="True"/>
				</group>
				<group>
					<group string="Data">
						<field name="size" widget="dms_size" />
						<field name="extension" groups="muk_dms.group_dms_manager,muk_dms.group_dms_admin"/>
						<field name="mimetype" groups="muk_dms.group_dms_manager,muk_dms.group_dms_admin"/>
					</group>
					<group string="Settings" groups="muk_dms.group_dms_manager,muk_dms.group_dms_admin">
						<field name="settings" />
						<field name="directory" />
					</group>
				</group>
				<notebook>
					<page string="Access Information" groups="muk_dms.group_dms_admin">
						<group>
							<group>
								<field name="perm_read" readonly="1" />
							</group>
							<group>
								<field name="perm_create" readonly="1" />
								<field name="perm_write" readonly="1" />
								<field name="perm_unlink" readonly="1" />
							</group>
						</group>
					</page>
					<page string="Meta Information" groups="muk_dms.group_dms_admin">
						<group>
							<group>
								<field name="id" />
							</group>
							<group>
								<field name="locked_by" />
							</group>
						</group>
						<group>
							<group>
								<field name="create_date" readonly="1" />
								<field name="create_uid" readonly="1" />
							</group>
							<group>
								<field name="write_date" readonly="1" />
								<field name="write_uid" readonly="1" />
							</group>
						</group>
					</page>
					<page string="Technical Information" groups="muk_dms.group_dms_admin">
						<group>
							<field name="reference" />
						</group>
						<group string="Indexed Content">
							<field name="index_content" nolabel="1" />
						</group>
					</page>
					<page name="extra_info" string="Extra Information">
						<field name="description"/>
					</page>
				</notebook>
			</sheet>
		</form>
	</field>
</record>

<record id="action_dms_file" model="ir.actions.act_window">
	<field name="name">Document Files</field>
	<field name="res_model">muk_dms.file</field>
	<field name="view_mode">kanban,tree,form</field>
</record>

</odoo>